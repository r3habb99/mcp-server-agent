{
  "name": "augment-mcp-server",
  "version": "1.0.0",
  "description": "A comprehensive MCP server for local system integration with Augment AI",
  "type": "module",
  "main": "build/server/index.js",
  "bin": {
    "augment-mcp-server": "./build/server/index.js"
  },
  "scripts": {
    "build": "tsc && chmod +x build/server/index.js",
    "dev": "tsx watch src/server/index.ts",
    "start": "node build/server/index.js",
    "test": "node test-basic.js",
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf build",
    "prepare": "npm run build",
    "package": "./package-for-distribution.sh",
    "install:linux": "./install.sh",
    "install:windows": "powershell -ExecutionPolicy Bypass -File install.ps1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "augment",
    "server",
    "typescript",
    "nodejs"
  ],
  "author": "Rishabh Prajapati",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "node-cron": "^3.0.3",
    "systeminformation": "^5.21.22",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
